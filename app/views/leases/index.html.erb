<p id="notice"><%= notice %></p>

<h1>Listing Leases</h1>

<table>
  <thead>
    <tr>
      <th>Lease start</th>
      <th>Lease term</th>
      <th>Lease end</th>
      <th>Lease signed</th>
      <th>Signature</th>
      <th>Additional file</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td><%= lease.lease_start %></td>
        <td><%= lease.lease_term %></td>
        <td><%= lease.lease_end %></td>
        <td><%= lease.lease_signed %></td>
        <td><%= lease.signature %></td>
        <td><%= lease.additional_file %></td>
        <td><%= link_to 'Show', lease %></td>
        <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
        <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

